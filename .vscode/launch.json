{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Research Agent: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.."
            },
            "cwd": "${workspaceFolder}/agents/research_agent"
        }
    ]
} 